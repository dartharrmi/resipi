<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorEnergyYellow</item>
        <item name="colorPrimaryDark">@color/colorHokeyPokey</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/drawable_launch_screen</item>
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressBarTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorWebOrange</item>
    </style>

    <style name="AppTheme.DetailHeader" parent="TextAppearance.MdcTypographyStyles.Headline5">
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:maxLines">3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DetailExtraInfo" parent="TextAppearance.MdcTypographyStyles.Overline">
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
        <item name="android:drawableTint">@color/colorSubtitle</item>
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DetailSummary" parent="TextAppearance.MdcTypographyStyles.Caption">
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15dp</item>
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
        <item name="android:drawableTint">@color/colorSubtitle</item>
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DetailPillCaption" parent="TextAppearance.MdcTypographyStyles.Caption">
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DetailLabel" parent="TextAppearance.MdcTypographyStyles.Headline6">
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CardTitle" parent="TextAppearance.MdcTypographyStyles.Subtitle2">
        <item name="android:layout_marginTop">@dimen/dimen_2dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EmptyState" parent="TextAppearance.MdcTypographyStyles.Headline6">
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorHokeyPokey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CardLabelServings" parent="TextAppearance.MdcTypographyStyles.Overline">
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:drawablePadding">@dimen/dimen_2dp</item>
        <item name="android:drawableTint">@color/colorHokeyPokey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CardLabelCookingTime" parent="AppTheme.CardLabelServings">
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:drawablePadding">@dimen/dimen_5dp</item>
        <item name="android:drawableTint">@color/colorHokeyPokey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>